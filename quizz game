# Welcome to Quiz Game
print("Welcome to Quiz Game!")
lives = 3
score = 0
ans = str(input("Do you want to play? Yes/No?: "))
if ans == "Yes":
    print("Game Starting..")
else:
    if ans == "No":
        print("Goodbye")
        exit()


#Question 1
question1 = input('Question 1: In which year did Ferdinand Magellan first land in the Philippines? : a.1221 , b.1521 :')
if question1 == "b":
    print('Correct')
    score += 1
if question1 != "a":
    lives -= 1
    print('You have', lives, 'life left')
    if lives == 0:
        print('Game Over.')
        exit()


#Question 2
question2 = input('Question 2: Mayon Volcano is located in which province? : a.Albay , b.Cavite :')
if question2 == "a":
    print('Correct')
    score += 1
if question2 != "b":
    lives -= 1
    print('You have', lives, 'life left')
    if lives == 0:
        print('Game Over.')
        exit()


